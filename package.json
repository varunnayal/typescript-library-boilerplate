{
  "name": "typescript-library-boilerplace",
  "version": "1.0.0",
  "description": "A boilerplate for writing library in typescript",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/slice-varunnayal/typescript-library-boilerplace"
  },
  "scripts": {
    "test": "./node_modules/.bin/nyc mocha src/**/*.spec.ts",
    "cov": "./node_modules/.bin/nyc ./node_modules/.bin/mocha src/**/*.spec.ts",
    "prebuild": "rm -rf lib",
    "build": "./node_modules/.bin/tsc -p .",
    "prepublishOnly": "npm run cov && npm run build -- --clean",
    "publish": "echo \"TODO\"",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "./node_modules/.bin/eslint . --ignore-path .gitignore --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "dev": "./node_modules/.bin/tsc -p . -w",
    "dev:test": "npm run test && open testresults/mochawesome.html",
    "dev:cov": "npm run cov && open testresults/mochawesome.html && open coverage/index.html",
    "all": "npm run format && npm run lint && npm test && npm run build"
  },
  "author": "Varun Nayal",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "mocha": "^7.1.2",
    "mochawesome": "^5.0.0",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "sinon": "^9.0.2",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  }
}
